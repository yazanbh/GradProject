<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="16"
    android:background="@drawable/circular_present"
    android:layout_margin="4dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="12sp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/student_name_detail_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="يزن محمود فهد بني هاني"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#B5000000"
            android:gravity="left"            />
        <TextView
            android:id="@+id/student_regNo_detail_adapter"
            android:textSize="15sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B5000000"
            android:layout_marginLeft="10dp"
            android:text="2000901023"
            android:gravity="left"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/present"
            />

    </LinearLayout><LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/nunito"
        android:layout_marginRight="5dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/absent"
        />

</LinearLayout>


</LinearLayout>